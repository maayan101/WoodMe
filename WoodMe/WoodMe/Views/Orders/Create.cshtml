@model WoodMe.Models.Order

@{
    ViewData["Title"] = "Create";
}

<h2>הזמנה חדשה</h2>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" class="form-control" disabled="disabled" value="@{DateTime.Today.ToString();}">
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageLink" class="control-label"></label>
                <input asp-for="ImageLink" class="form-control" type="url"/>
                <span asp-validation-for="ImageLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardNumber" class="control-label"></label>
                <input asp-for="CardNumber" class="form-control" pattern="[0-9]{12}"/>
                <span asp-validation-for="CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExperationMonth" class="control-label"></label>
                <input asp-for="ExperationMonth" class="form-control" type ="month"/>
                <span asp-validation-for="ExperationMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExperationYear" class="control-label"></label>
                <input asp-for="ExperationYear" class="form-control" type="range" min="2018" max="2025"/>
                <span asp-validation-for="ExperationYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CVV" class="control-label"></label>
                <input asp-for="CVV" class="form-control" pattern="[0-9]{3}"/>
                <span asp-validation-for="CVV" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="צור הזמנה" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">חזור לרשימת הזמנות</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
